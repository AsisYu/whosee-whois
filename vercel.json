{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- src/ package.json package-lock.json next.config.ts tsconfig.json",
  "framework": "nextjs",
  "nodejs": "20.x",
  "regions": ["hkg1", "sin1"],
  "functions": {
    "src/app/**/*.tsx": {
      "runtime": "@vercel/next"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/cms(.*)",
      "destination": "/404",
      "permanent": false
    }
  ]
} 